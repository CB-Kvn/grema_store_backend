{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "paths": {"*":["types/"]},
        "resolveJsonModule": true,
        "typeRoots": ["./types","./node_modules/@types"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*", "index.ts"],
}