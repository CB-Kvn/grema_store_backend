// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            String            @id
  name          String
  cellphone     String
  profile       Profile?
  favorites     Favorites_Carts[]
  createAtUsers DateTime?         @default(now())
  updateAtUsers DateTime?         @updatedAt
  status        Boolean
  invoices      Invoice[]
}

model Profile {
  id              Int       @id @default(autoincrement())
  email           String    @unique
  password        String
  address         String
  image           String
  bio             String?
  rol             RolUser   @relation(fields: [rolId], references: [id])
  rolId           Int       // Clave for√°nea que referencia a RolUser
  user            Users     @relation(fields: [userId], references: [id])
  userId          String    @unique
  marketingEmails String?
  securityEmails  String?
  createAtProfile DateTime? @default(now())
  updateAtProfile DateTime? @updatedAt
}

model RolUser {
  id   Int    @id @default(autoincrement())
  name String
  profiles Profile[] // Un rol puede estar asociado a varios perfiles
}


model Category {
  id              String    @id
  name            String    @unique
  products        Product[]
  status          String
  createAtProfile DateTime? @default(now())
  updateAtProfile DateTime? @updatedAt
}

model Product {
  id              String      @id
  name            String
  description     String
  material        String
  size            String
  shape           String
  category        Category    @relation(fields: [categoryId], references: [id])
  categoryId      String
  product         Inventory[]
  color           String
  createAtProduct DateTime?   @default(now())
  updateAtProduct DateTime?   @updatedAt
}

model Inventory {
  id                       String            @id
  product                  Product           @relation(fields: [productId], references: [id])
  productId                String
  quantity                 Int
  image                    String[]
  price                    Decimal
  favorites                Favorites_Carts[]
  status                   String
  typeDesc                 String
  desc                     Int
  InvoiceDetail            InvoiceDetail[]
  createAtProductInventory DateTime?         @default(now())
  updateAtProductInventory DateTime?         @updatedAt
}

model Favorites_Carts {
  id          String    @id @unique
  user        Users     @relation(fields: [userId], references: [id])
  userId      String
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId String
  type        String
  quantity    Int
  status      Boolean
}

model Invoice {
  orderId         String          @id @unique
  invoiceNumber   String?
  subtotal          Decimal
  user            Users           @relation(fields: [userId], references: [id])
  userId          String
  name            String?
  idGues          String?
  phone           String?
  email           String?
  address         String?
  typeUser        String
  tax             Decimal
  typeShipping    String
  shipping        Decimal
  details         InvoiceDetail[]
  pdf             String?
  confirmation    String?
  taxAmount       Decimal
  discount        Decimal
  total           Decimal
  status          String
  createAtInvoice DateTime?       @default(now())
  updateAtInvoice DateTime?       @updatedAt
}

model InvoiceDetail {
  id                    Int       @id @default(autoincrement())
  order                 Invoice   @relation(fields: [orderNumber], references: [orderId])
  orderNumber           String
  invoiceId             String?
  inventory             Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId           String
  quantity              Int
  discount              Decimal
  amountDiscount        Decimal
  porcentageDiscount    Int
  price                 Decimal
  status                String
  createAtInvoiceDetail DateTime? @default(now())
  updateAtInvoiceDetail DateTime? @updatedAt
}

model MantColor {
  id                String    @id
  name              String
  hexaCode               String
  status            String
  createAtMantColor DateTime? @default(now())
  updateAtMantColor DateTime? @updatedAt
}

model MantMaterial {
  id                String    @id
  name              String
  status            String
  createAtMantColor DateTime? @default(now())
  updateAtMantColor DateTime? @updatedAt
}

model MantSize {
  id                String    @id
  name              String
  status            String
  createAtMantColor DateTime? @default(now())
  updateAtMantColor DateTime? @updatedAt
}

model MantShape {
  id                String    @id
  name              String
  status            String
  createAtMantColor DateTime? @default(now())
  updateAtMantColor DateTime? @updatedAt
}

model BoxPrice {
  id                Int       @id @default(autoincrement())
  gam               Decimal
  other             Decimal
  createAtMantColor DateTime? @default(now())
  updateAtMantColor DateTime? @updatedAt
}
